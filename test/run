#!/usr/bin/env bash

test_root=$(cd $(dirname "$0"); pwd)

pattern=${1:-}

tests=$(cd "$test_root"; find . -type f -path "./$pattern*/test")

run=run-$$-$RANDOM

STAGE=${STAGE:-I}
EXTOL=$(realpath -s "${EXTOL:-$test_root/../local/bin/extol}")

ENABLE_ALL=

extol () {
    "$EXTOL" "$@"
}

capture () {
    out=$test_root/$test/$run/out/${1//[.\/ ]/}
    i=2
    while [[ -e $out.code ]]; do
        out=${out%.*}.$((i++))
    done
    "$@" > $out.stdout 2> $out.stderr
    code=$?
    echo $code > $out.code
    return $code
}

verify () (
    cd "$test_root/$test"
    if [[ -e $run/out ]]; then
        diff -N -U 3 -r expected $run/out
    else
        test ! -e "expected"
    fi
)

disabled () {
    if [[ -z "${ENABLE_ALL}" ]]; then
        echo [$STAGE] + DISABLED $test
        exit 0
    fi
}

total=0
failed=0

for test_file in $tests; do
    test=${test_file%/test}
    test=${test#./}
    stages_file="$test_root/$test/stages"
    stages=$(test -e "$stages_file" && cat "$stages_file" || echo "12I")
    if [[ -n "${stages##*$STAGE*}" ]]; then
        continue
    fi
    let ++total
    echo [$STAGE] + TEST $test
    error=0
    ( cd "$test_root/$test"
      rm -rf $run
      mkdir $run
      cd $run
      ln -s .. input
      mkdir out
      set -e
      . ../test
    )
    error=$?
    verify || error=1
    if [[ $error = 0 ]]; then
        rm -rf "$test_root/$test/$run"
    else
        echo [$STAGE] FAILED $test
        let ++failed
    fi
done

if [[ $failed = 0 ]]; then
    echo [$STAGE] $total TESTS PASSED
else
    echo [$STAGE] $failed/$total TESTS FAILED "($run)"
    exit 1
fi
